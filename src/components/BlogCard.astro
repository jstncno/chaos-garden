---
import IconLink from '@chaosgarden/components/IconLink.astro';
import {type Links} from '@chaosgarden/lib/post';

interface Props {
  links?: Links;
}

const {links} = Astro.props;
---

<div class="blog-card">
  {links &&
    <div class="links-container">
      {links.web && <IconLink href={links.web} name="mdi:web" />}
      {links.github && <IconLink href={links.github} name="mdi:github" />}
      {links.codesandbox && <IconLink href={links.codesandbox} name="code-sandbox-seeklogo" />}
    </div>
  }
  <slot />
</div>

<style>
	:root {
    --font-color: #4b4b4b;
		--panel-color: #fbf9f5;
	}

	div.blog-card {
    /* Mobile first */
    background-color: var(--panel-color);
    color: var(--font-color);
    margin: 1rem 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 3px;
	}

  div.blog-card div.links-container {
    margin-top: 0.5rem;
    margin-bottom: -0.5rem;
  }
</style>

